{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "./lib",
    "strict": true
  }
}